{# templates/order/search.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Order Search Results{% endblock %}

{% block body %}
    <h1>Order Search Results</h1>

    <form action="{{ path('search_orders') }}" method="get">
        <label for="customer">Cliente:</label>
        <input type="text" name="customer" id="customer">

        <label for="status">Status:</label>
        <input type="text" name="status" id="status">

        <button type="submit">Search</button>
    </form>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Data</th>
                <th>Client</th>
                <th>Amount</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for order in orders %}
                <tr>
                    <td>{{ order.id }}</td>
                    <td>{{ order.date|date('Y-m-d H:i:s') }}</td>
                    <td>{{ order.customer }}</td>
                    <td>{{ order.amount }}</td>
                    <td>{{ order.status }}</td>
                    <td>
                        <a href="{{ path('cancel_order', {'id': order.id}) }}">Cancel</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
